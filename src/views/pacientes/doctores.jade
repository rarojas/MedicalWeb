// my-template.jade
extends ../funcions

block content
  #inicio
    .container
      .row
        .col-md-12.col-sm-12
          .div-trans.text-center
            h3 Doctores
            .col-md-12.col-sm-12
              .row
                .col-md-offset-3.col-md-6.col-sm-12
                    a.btn.btn-primary(href="#/registroDoctor") 
                      i.fa.fa-user-md 
                      |  Agregar Doctores
              .row
                .col-md-12.col-sm-12
                  .table-responsive
                    table(class="table table-striped table-bordered table-hover ")
                      thead
                        tr
                          th  Nombre
                          th  Especialidad
                          th  Subespecialidad
                          th  Cedula
                      tbody
                        tr(ng-repeat="doctor in vm.doctores" style="color:black;")
                          td {{doctor.nombre}}
                          td {{doctor.especialidad}}
                          td {{doctor.sub_especialidad}}
                          td {{doctor.cedula_profesional}}
