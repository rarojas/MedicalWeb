doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport",content="width=device-width, initial-scale=1, maximum-scale=1")
    meta(name="description" content="PT_2")
    meta(name="author" content="#{autor}")
    link(href="/assets/css/bootstrap.css",rel="stylesheet")
    link(href="/assets/css/font-awesome.min.css",rel="stylesheet")
    link(href="/assets/css/style.css",rel="stylesheet")
    link(href='http://fonts.googleapis.com/css?family=Open+Sans', rel='stylesheet', type='text/css')
    link(rel="shortcut icon",href="#{ico}")
    block head
  body
    header
      nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
        .container
          block navbar
    block content
    .container
      .row
        .col-md-12
          #social-icon
            a(href='#{facebook}')
              i.fa.fa-facebook.fa-1x
    #footer.for-full-back
      | #{year} #{url} | #{autor}
    script(src='/assets/plugins/jquery-1.10.2.js')
    // BOOTSTRAP CORE SCRIPT
    script(src='/assets/plugins/bootstrap.js')
    // PARALLAX SCRIPT
    script(src='/assets/plugins/jquery.parallax-1.1.3.js')
    // CUSTOM SCRIPT
    script(src='/assets/js/custom.js')
