// my-template.jade
extends ../layoutLogged

block head
  title Registro paciente

block content
  #inicio
    .container
      .row
        .col-md-12.col-sm-12
          .div-trans.text-center
            h3 Registro Paciente Nuevo
            form
              include datosUsuario
              .col-md-12.col-sm-12
                .form-group
                  select.form-control
                    option Tipo Sanguinio
                    each type, i in tipoSanguinioEnum
                      option(value=i) #{type}
              .col-md-12.col-sm-12
                .form-group
                  input.form-control(type='text', required='required', placeholder='Alergias')
              .col-md-12.col-sm-12
                .form-group
                  input.form-control(type='text', required='required', placeholder='Discapcidades')
              .form-group
                button.btn.btn-success(type='submit') Registrarse
