#inicio
  .container
    .row
      .col-md-12.col-sm-12.div-trans.text-center
          h3 Entidades 
          .col-md-12.col-sm-12
              table(class="table table-striped table-bordered table-hover ")
                thead
                  tr  
                    th  Nombre
                    th  Tipo
                    th  Detalle
                tbody
                  tr(ng-repeat="entidad in vm.entidades" style="color:black;")
                    td {{ entidad.nombre}}
                    td {{ entidad.tipo}}
                    td 
                      a.btn.btn-primary(href="#/detalleEntidad/{{entidad.idEntidad}}") Detalles
                    
